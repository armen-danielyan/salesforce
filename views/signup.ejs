<% include ./partials/header %>
<body class="blue">

<div class="row align-center">
    <div class="twelve columns">

        <img class="margin30-top" src="img/logo.png">

        <div class="login">
            <form id="form_signup" method="post" action="/signup">

                <% if(typeof(errorMessage) !== 'undefined') {%>
                <span><%= errorMessage %></span>
                <% } %>

                <label>Full Name</label>
                <input type="text" name="full_name" required>

                <label>Username</label>
                <input type="text" name="username" required>

                <label>E-Mail</label>
                <input type="email" name="email" required>

                <label>Password</label>
                <input type="password" name="password" required>

                <br>

                <a class="button orange margin20-top" id="submit_signup" href="javascript: void(0)">Register</a>
                <p class="margin20-top"><a href="/signin">Login</a></p>
                <p class="margin20-top"><a href="/reset">Forgot Password</a></p>
            </form>
        </div>

    </div>
</div>
<% include ./partials/footer %>